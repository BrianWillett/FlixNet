            </Label>
            <Group id="iconGroup" translation="[0,100]">
                <LayoutGroup id="isCollapsed" translation="[22,200]" layoutDirection="vert" itemSpacings="[35]">
                    <Poster id="home" width="40" height="40" uri="pkg:/assets/images/navigation/icons/home.png" blendColor="#555555"/>
                    <Poster id="movies" width="40" height="40" uri="pkg:/assets/images/navigation/icons/movies.png" blendColor="#555555" />
                    <Poster id="tv" width="40" height="40" uri="pkg:/assets/images/navigation/icons/tv.png" blendColor="#555555" />
                    <Poster id="settings" width="40" height="40" uri="pkg:/assets/images/navigation/icons/settings.png" blendColor="#555555" />
                    <Poster id="logout" width="40" height="40" uri="pkg:/assets/images/navigation/icons/logout.png" blendColor="#555555" />
                </LayoutGroup>
                <Label id="dot" text="*" color="#555555" height="40" vertAlign="center" translation="[10,205]" >
                    <font role="font" size="25" uri="pkg:/assets/fonts/Lato-Regular.ttf"/>
                </Label>
                <LayoutGroup id="labelGroup" visible="false" translation="[76,202]" layoutDirection="vert" itemSpacings="[35]" >
                    <Label id="HomeScreen" text="Home" color="#FFFFFF" height="40" vertAlign="center" >
                        <font role="font" size="25" uri="pkg:/assets/fonts/Lato-Regular.ttf"/>
