    <script type="text/brightscript" uri="pkg:/source/utils.brs" />
    <interface>
        <field id="navWidth" type="boolean" alias="overhang.width" />
        <field id="expanded" type="boolean" onChange="handleExpansion" />
        <field id="navBg" type="string" alias="overhang.uri" />
        <field id="homeColor" type="string" alias="home.blendColor" />
        <field id="moviesColor" type="string" alias="movies.blendColor" />
        <field id="tvColor" type="string" alias="tv.blendColor" />
        <field id="settingsColor" type="string" alias="settings.blendColor" />
        <field id="dotColor" type="string" alias="dot.color" />
        <field id="dotTranslation" type="array" alias="dot.translation" />
        <field id="labelsVis" type="boolean" alias="labelGroup.visible" />
        <field id="titleVis" type="boolean" alias="title.visible" />

    </interface>
    <children>
        <Group id="masterGroup" translation="[20,0]">
            <Poster id="overhang" width="100" height="1080" uri="pkg:/assets/images/navigation/collapsed.png" />
