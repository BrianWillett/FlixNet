                    <Label id="MoviesScreen" text="Movies" color="#FFFFFF" height="40" vertAlign="center" >
                        <font role="font" size="25" uri="pkg:/assets/fonts/Lato-Regular.ttf"/>
                    </Label>
                    <Label id="TVScreen" text="Television" color="#FFFFFF" height="40" vertAlign="center" >
                        <font role="font" size="25" uri="pkg:/assets/fonts/Lato-Regular.ttf"/>
                    </Label>
                    <Label id="SettingsScreen" text="Settings" color="#FFFFFF" height="40" vertAlign="center" >
                        <font role="font" size="25" uri="pkg:/assets/fonts/Lato-Regular.ttf"/>
                    </Label>
                    <Label id="LoginScreen" text="Logout" color="#FFFFFF" height="40" vertAlign="center" >
                        <font role="font" size="25" uri="pkg:/assets/fonts/Lato-Regular.ttf"/>
                    </Label>
                </LayoutGroup>
           </Group>
        </Group>
    </children>
</component>